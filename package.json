{
  "name": "studiolive-midi-controller",
  "version": "0.9.0",
  "description": "MIDI controller for PreSonus StudioLive mixers using Logic Pro",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "npm run build && electron .",
    "build": "tsc -p tsconfig.main.json && npm run copy-assets",
    "copy-assets": "mkdir -p dist/renderer && cp src/renderer/index.html dist/renderer/",
    "start": "electron .",
    "clean": "rm -rf dist",
    "dist": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.sandinak.studiolive-midi-controller",
    "productName": "StudioLive MIDI Controller",
    "mac": {
      "category": "public.app-category.music",
      "target": [
        "dmg"
      ],
      "icon": "assets/icon.icns"
    },
    "dmg": {
      "title": "StudioLive MIDI Controller",
      "icon": "assets/icon.icns"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ]
  },
  "keywords": [
    "presonus",
    "studiolive",
    "midi",
    "logic-pro",
    "mixer",
    "controller"
  ],
  "author": "sandinak",
  "license": "MIT",
  "dependencies": {
    "easymidi": "^3.0.1",
    "presonus-studiolive-api": "file:../presonus-studiolive-api"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "electron": "^28.2.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.3.3"
  }
}
